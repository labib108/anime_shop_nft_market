/* Based on https://github.com/tsconfig/bases/blob/501da2bcd640cf95c95805783e1012b992338f28/bases/node22.json */
{
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "dist"
  },
  "include": [
    // Ensure all source and test files are here
    "./scripts",
    "./test",
    "./typechain-types",
    "./*.ts"
  ],
  // CRITICAL: Ensure the Hardhat config file is listed
  "files": [
    "./hardhat.config.ts"
  ]
}